<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/themebluehue"
    android:backgroundTintMode="add"
    tools:context=".gamepane_activity">

    <TableLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/themeblue"
        android:paddingBottom="3dip"
        android:paddingEnd="3dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingStart="3dip"
        android:paddingTop="3dip"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/mascotLevel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="1dip"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="3dip"
                android:text="@string/mascotLevel" />

            <TextView
                android:id="@+id/mascotPoint"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="1dip"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="3dip"
                android:text="@string/mascotPoints" />

            <TextView
                android:id="@+id/mascotRank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="1dip"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:paddingTop="3dip"
                android:text="@string/mascotRank" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/mascotLevelValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:text="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mascotPointValue"
                style="@android:style/Theme.Black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:text="100"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mascotRankValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingEnd="3dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:text="Beginner"
                android:textSize="25sp" />
        </TableRow>


    </TableLayout>

    <ImageView
        android:id="@+id/mascotImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2" />


    <TableLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/themeblue"
        android:paddingBottom="3dip"
        android:paddingEnd="3dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="3dip"
        android:stretchColumns="0,1,2">

        <TableRow>

            <ImageButton
                android:id="@+id/mascotCallRescue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeblue"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_local_phone_black_36dp" />

            <ImageButton
                android:id="@+id/mascot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeblue"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_cancel_black_36dp" />

            <ImageButton
                android:id="@+id/nextMascot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/themeblue"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/ic_chevron_right_black_36dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
